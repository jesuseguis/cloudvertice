# ===================================
# DATABASE
# ===================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/cloudvertice?schema=public"
REDIS_URL="redis://localhost:6379"

# ===================================
# JWT / AUTH
# ===================================
JWT_SECRET="change-this-secret-in-production-min-32-chars"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ===================================
# CONTABO API
# ===================================
CONTABO_CLIENT_ID="your-contabo-client-id"
CONTABO_CLIENT_SECRET="your-contabo-client-secret"
CONTABO_API_USER="your-contabo-api-user"
CONTABO_API_PASSWORD="your-contabo-api-password"
CONTABO_API_BASE_URL="https://api.contabo.com"

# ===================================
# ENCRYPTION (for VPS passwords)
# ===================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your-32-byte-hex-key-here"

# ===================================
# STRIPE
# ===================================
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."

# ===================================
# EMAIL (SendGrid)
# ===================================
SENDGRID_API_KEY="SG...."
EMAIL_FROM="noreply@cloudvertice.com"
EMAIL_FROM_NAME="Cloud Vertice"

# ===================================
# APP
# ===================================
NODE_ENV="development"
APP_URL="http://localhost:3000"
API_URL="http://localhost:4000"

# ===================================
# FRONTEND
# ===================================
NEXT_PUBLIC_API_URL="http://localhost:4000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
