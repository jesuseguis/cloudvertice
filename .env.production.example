# ===========================================
# Cloud Vertice - Variables de Entorno Producci贸n
# ===========================================
# Configurar estas variables en Dokploy antes del despliegue
#
# Puertos internos de contenedores (no modificar):
# - Frontend: 3000
# - Backend: 4000
# - PostgreSQL: 5432
# - Redis: 6379

# ===========================================
# Base de Datos PostgreSQL
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=cloudvertice

# ===========================================
# Redis Cache
# ===========================================
REDIS_PASSWORD=your_secure_redis_password_here

# ===========================================
# JWT - Autenticaci贸n
# ===========================================
# Generar con: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_min_32_chars_change_this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Contabo API
# ===========================================
CONTABO_CLIENT_ID=your_contabo_client_id
CONTABO_CLIENT_SECRET=your_contabo_client_secret
CONTABO_API_USER=your_contabo_api_user
CONTABO_API_PASSWORD=your_contabo_api_password
CONTABO_API_BASE_URL=https://api.contabo.com

# ===========================================
# Encriptaci贸n (para passwords VPS)
# ===========================================
# Generar con: openssl rand -hex 32
ENCRYPTION_KEY=your_32_byte_hex_key_here

# ===========================================
# Stripe - Pagos
# ===========================================
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_live_...

# ===========================================
# Email - SendGrid
# ===========================================
SENDGRID_API_KEY=SG....
EMAIL_FROM=noreply@cloudvertice.com
EMAIL_FROM_NAME=Cloud Vertice

# ===========================================
# URLs de la Aplicaci贸n
# ===========================================
# Frontend URL (para CORS y links)
APP_URL=https://cloud.vertice.com.co
NEXT_PUBLIC_APP_URL=https://cloud.vertice.com.co
# Backend URL (desde frontend - configurar dominio del backend en Dokploy)
NEXT_PUBLIC_API_URL=https://api.vertice.com.co

# ===========================================
# Logs y Monitoreo (opcional)
# ===========================================
LOG_LEVEL=info
SENTRY_DSN=  # Opcional: para tracking de errores
SENTRY_ENVIRONMENT=production
